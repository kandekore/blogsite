<div class="comments">
  {{#if comments.length}}<h3>Comments</h3>{{/if}}
  <ul class="list-group list-group-flush">

    {{#each comments}}
      <li class="list-group-item"><div class="commentdiv">{{comment}}</div>

        <small class="text-muted"><b>User:
            <a href="/posts/{{user_id}}">{{user.name}} </a></b>-</small>

        <small class="text-muted"> {{format_time date}} - </small>

        <small class="text-muted"><a href="/posts/{{post_id}}">Origin post</a></small></li>
    {{/each}}
  </ul>
</div>